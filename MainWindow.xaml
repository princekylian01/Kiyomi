<Window x:Class="Kiyomi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kiyomi Launcher"
        Width="800" 
        Height="500"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded"
        >
    <Border Background="{StaticResource WindowBackgroundColor}" 
            CornerRadius="12" 
            BorderThickness="0"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10"
                              ShadowDepth="0"
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <!-- Кнопка закрытия -->
            <Button Content="X"
                    Width="30" 
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Click="CloseButton_Click"
                    Background="Transparent"
                    Foreground="#FF444444"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"/>

            <!-- Основной контент -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="SIGN IN" 
                               FontSize="30" 
                               Foreground="{StaticResource AccentColor}"
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <TextBlock Text="Welcome back, Past Owl! Glad to see you again."
                               FontSize="12"
                               Foreground="{StaticResource SubTextColor}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Username"/>

                    <TextBox x:Name="LoginTextBox"
                             Height="35" 
                             Margin="0,0,0,10"
                             Background="#FFF2F2F2"
                             BorderThickness="1"
                             BorderBrush="#FFD8D8D8"
                             Foreground="{StaticResource TextColor}"
                             Padding="5" />

                    <TextBlock Text="Password"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Height="35" 
                                 Margin="0,0,0,20"
                                 Background="#FFF2F2F2"
                                 BorderThickness="1"
                                 BorderBrush="#FFD8D8D8"
                                 Foreground="{StaticResource TextColor}"
                                 Padding="5"
                                 />

                    <Button x:Name="LaunchButton"
                            Content="LAUNCH"
                            Width="200"
                            Height="40"
                            Click="LaunchButton_Click"
                            />

                    <TextBlock Text="Don't have an account? SIGN UP"
                               FontSize="12"
                               Foreground="{StaticResource SubTextColor}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>
