<Window x:Class="Kiyomi.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating..." 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" 
        Height="200"
        Loaded="Window_Loaded"
        >
    <Border CornerRadius="12"
            Background="{StaticResource WindowBackgroundColor}"
            BorderBrush="#FFCCCCCC"
            BorderThickness="0"
            Padding="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <TextBlock Text="Updating, please wait..." 
                       Foreground="{StaticResource TextColor}" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="0,20,0,0"/>

            <ProgressBar x:Name="UpdateProgress" 
                         Width="300" 
                         Height="20" 
                         Margin="0,60,0,0" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Top"/>

            <TextBlock x:Name="ProgressText"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,90,0,0"
                       FontSize="14"
                       Foreground="{StaticResource TextColor}"/>

            <Button Content="X"
                    Width="30" 
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Click="CloseButton_Click"
                    Background="Transparent"
                    Foreground="#FF444444"
                    BorderBrush="{x:Null}"/>
        </Grid>
    </Border>
</Window>
